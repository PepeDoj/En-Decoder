<Page x:Class="En_Decoder.OpenChat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:En_Decoder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpenChat">

    <Grid>
        <TextBox x:Name="OpenChatLogin" HorizontalAlignment="Left" Margin="242,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="OpenChatPassword" HorizontalAlignment="Left" Margin="242,168,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="OpenChatButton" Content="" HorizontalAlignment="Left" Margin="242,205,0,0" VerticalAlignment="Top" Height="20" Width="120" Click="OpenChatButton_Click"/>

    </Grid>
</Page>
