      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:En_Decoder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewChat">

    <Grid>
        <TextBox x:Name="NewChatLogin" HorizontalAlignment="Left" Margin="315,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="NewChatButton" Content="" HorizontalAlignment="Left" Margin="315,0,0,0" VerticalAlignment="Center" Height="36" Width="120" Click="NewChatButton_Click"/>
        <PasswordBox x:Name="NewChatPassword" HorizontalAlignment="Left" Margin="315,112,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="NewChatPasswaordProof" HorizontalAlignment="Left" Margin="315,154,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="OpenChat" Content="Button" HorizontalAlignment="Left" Margin="533,225,0,0" VerticalAlignment="Top" Click="OpenChat_Click"/>

    </Grid>
</Page>
